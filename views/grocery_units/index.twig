{% extends "layout.twig" %}
{% block title %}الوحدات القياسية{% endblock %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">الوحدات القياسية</h1>

    <div class="d-flex gap-2">
        <a href="{{ base }}/create" class="btn btn-primary">+ إضافة وحدة</a>
        <a href="/admincp/grocery/stock" class="btn btn-outline-secondary">رجوع للمستودع</a>
    </div>
</div>

{% if success %}
    <div class="alert alert-success">{{ success }}</div>
{% endif %}

<table class="table table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:60px;">#</th>
            <th>اسم الوحدة</th>
            <th style="width:140px;">الاختصار</th>
            <th style="width:120px;">الحالة</th>
            <th style="width:160px;">إجراءات</th>
        </tr>
    </thead>
    <tbody>
        {% for u in units %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.name }}</td>
                <td><strong>{{ u.abbreviation }}</strong></td>
                <td>
                    <span class="badge {{ u.status == 'active' ? 'bg-success' : 'bg-secondary' }}">
                        {{ u.status == 'active' ? 'نشطة' : 'غير نشطة' }}
                    </span>
                </td>
                <td>
                    <a href="{{ base }}/{{ u.id }}/edit" class="btn btn-sm btn-outline-primary">تعديل</a>
                    <a href="{{ base }}/{{ u.id }}/delete"
                       onclick="return confirm('تأكيد الحذف؟');"
                       class="btn btn-sm btn-outline-danger">حذف</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
