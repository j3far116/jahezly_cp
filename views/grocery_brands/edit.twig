{% extends "layout.twig" %}

{% block title %}تعديل علامة تجارية{% endblock %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">تعديل العلامة التجارية</h1>
    <a href="{{ base }}" class="btn btn-light">رجوع للقائمة</a>
</div>

{% if errs %}
    <div class="alert alert-danger">
        {% for e in errs %}
            <div>{{ e }}</div>
        {% endfor %}
    </div>
{% endif %}

<form method="post" action="{{ base }}/{{ row.id }}/update" enctype="multipart/form-data">
    {% include "grocery_brands/_form.twig" with { row: row, old: old } %}
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">تحديث</button>
        <a href="{{ base }}" class="btn btn-light">إلغاء</a>
    </div>
</form>

{% endblock %}
