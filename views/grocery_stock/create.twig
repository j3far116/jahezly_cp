{% extends "layout.twig" %}
{% block title %}إضافة منتج — مستودع البقالة{% endblock %}

{% block content %}

<h1 class="h5 mb-4">إضافة منتج جديد</h1>

{% if errs %}
<div class="alert alert-danger">
    <ul class="mb-0">
        {% for e in errs %}
            <li>{{ e }}</li>
        {% endfor %}
    </ul>
</div>
{% endif %}

<form method="post" action="{{ base }}/create" enctype="multipart/form-data">

    {% include "grocery_stock/_form.twig" %}

    <button class="btn btn-primary mt-4">إضافة المنتج</button>
</form>

{% endblock %}
