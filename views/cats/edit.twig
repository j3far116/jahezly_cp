{% extends "layout.twig" %}
{% block title %}تعديل قسم — {{ market.name }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">تعديل قسم</h1>
  <a href="{{ back }}" class="btn btn-light">رجوع</a>
  <a href="{{ base }}/{{ cat.id }}/delete/confirm" class="btn btn-danger">حذف</a>

</div>

<div class="card">
  <div class="card-body">
    <form method="post" action="{{ base }}/{{ cat.id }}">
      {{ csrf_field()|raw }}
      <div class="mb-3">
        <label class="form-label">اسم القسم</label>
        <input type="text" name="name" class="form-control {{ (errs.name ?? '') ? 'is-invalid' : '' }}"
               maxlength="255" value="{{ (old.name ?? cat.name) }}" required>
        {% if errs.name %}<div class="invalid-feedback">{{ errs.name }}</div>{% endif %}
      </div>
      <button class="btn btn-primary">حفظ التغييرات</button>
      <a href="{{ back }}" class="btn btn-light">إلغاء</a>
    </form>
  </div>
</div>
{% endblock %}
