{% extends "layout.twig" %}
{% block title %}إضافة مجموعة خيارات — {{ product.name }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">إضافة مجموعة خيارات للمنتج: {{ product.name }}</h1>
  <div class="d-flex gap-2">
    <a class="btn btn-light" href="{{ base }}">رجوع</a>
  </div>
</div>

<form method="post" action="{{ base }}">
  {{ csrf_field()|raw }}
  {% include 'option_groups/_form.twig' with {
    errs: (errs is defined ? errs : {}),
    old:  (old  is defined ? old  : {}),
    options: (options is defined ? options : [])
  } %}
  <div class="mt-3">
    <button class="btn btn-primary">حفظ</button>
    <a class="btn btn-light" href="{{ base }}">إلغاء</a>
  </div>
</form>
{% endblock %}
