{% extends "layout.twig" %}
{% block title %}تعديل مجموعة الخيارات — {{ product.name }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">تعديل مجموعة الخيارات للمنتج: {{ product.name }}</h1>
  <a class="btn btn-light" href="{{ base }}">رجوع</a>
</div>

<form method="post" action="{{ base }}/{{ item.id }}/save">
  {{ csrf_field()|raw }}
  {% include 'option_groups/_form.twig' with { errs: errs, old: old, item: item } %}
  <div class="mt-3">
    <button class="btn btn-primary">حفظ التعديلات</button>
    <a class="btn btn-light" href="{{ base }}">إلغاء</a>
  </div>
</form>
{% endblock %}
