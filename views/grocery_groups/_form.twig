{{ csrf_field()|raw }}

{% set v_name   = old.name   ?? (row.name   ?? '') %}
{% set v_status = old.status ?? (row.status ?? 'active') %}

<div class="row g-3">
    <div class="col-md-6">
        <label class="form-label">اسم القروب</label>
        <input type="text" name="name" class="form-control" required maxlength="255"
               value="{{ v_name }}">
    </div>

    <div class="col-md-3">
        <label class="form-label">الحالة</label>
        <select name="status" class="form-select">
            <option value="active"   {{ v_status == 'active' ? 'selected' : '' }}>نشط</option>
            <option value="inactive" {{ v_status == 'inactive' ? 'selected' : '' }}>غير نشط</option>
        </select>
    </div>
</div>
