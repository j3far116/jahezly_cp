{% extends "layout.twig" %}

{% block title %}تعديل قروب: {{ row.name }}{% endblock %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">تعديل القروب</h1>
    <a href="{{ base }}" class="btn btn-light">رجوع للقائمة</a>
</div>

{% if errs %}
    <div class="alert alert-danger">
        <ul class="mb-0">
            {% for e in errs %}
                <li>{{ e }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<form method="post" action="{{ base }}/{{ row.id }}/update">
    {% include "grocery_groups/_form.twig" with { row: row, old: old } %}
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">تحديث</button>
        <a href="{{ base }}" class="btn btn-light">إلغاء</a>
    </div>
</form>

{% endblock %}
