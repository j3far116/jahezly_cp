{% extends "layout.twig" %}
{% block title %}تعديل التصنيف{% endblock %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">تعديل التصنيف</h1>
    <a href="{{ base }}" class="btn btn-light">رجوع</a>
</div>

{% if errs %}
    <div class="alert alert-danger">
        {% for e in errs %}
            <div>{{ e }}</div>
        {% endfor %}
    </div>
{% endif %}

<form method="post" action="{{ base }}/{{ row.id }}/update">
    {% include "grocery_cats/_form.twig" with { row: row } %}
    <div class="mt-3">
        <button class="btn btn-primary">تحديث</button>
    </div>
</form>

{% endblock %}
