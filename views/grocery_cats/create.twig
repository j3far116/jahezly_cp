{% extends "layout.twig" %}

{% block title %}إضافة تصنيف جديد{% endblock %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">إضافة تصنيف جديد</h1>
    <a href="{{ base }}" class="btn btn-light">رجوع</a>
</div>

{% if errs %}
    <div class="alert alert-danger">
        {% for e in errs %}
            <div>{{ e }}</div>
        {% endfor %}
    </div>
{% endif %}

<form method="post" action="{{ base }}">
    {% include "grocery_cats/_form.twig" %}
    <div class="mt-3">
        <button class="btn btn-primary">حفظ</button>
    </div>
</form>

{% endblock %}
