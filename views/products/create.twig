{% extends "layout.twig" %}
{% block title %}إضافة منتج{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">إضافة منتج</h1>
  <a class="btn btn-light" href="{{ base }}">رجوع</a>
</div>

<form method="post" action="{{ base }}">
  {{ csrf_field()|raw }}
  {% include 'products/_form.twig' with {
    errs: (errs is defined ? errs : {}),
    old:  (old  is defined ? old  : {}),
    cats: (cats is defined ? cats : [])
  } %}
  <div class="mt-3">
    <button class="btn btn-primary">حفظ</button>
    <a class="btn btn-light" href="{{ base }}">إلغاء</a>
  </div>
</form>
{% endblock %}
