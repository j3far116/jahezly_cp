{% extends "layout.twig" %}
{% block title %}تعديل منتج{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">تعديل: {{ item.name }}</h1>
  <div class="d-flex gap-2">
    <a class="btn btn-light" href="{{ base }}/{{ item.id }}">رجوع</a>
<a href="{{ base }}/{{ item.id }}/delete/confirm" class="btn btn-danger">حذف</a>
  </div>
</div>

<form method="post" action="{{ base }}/{{ item.id }}">
  {{ csrf_field()|raw }}
  {% include 'products/_form.twig' with {
    item: item,
    errs: (errs is defined ? errs : {}),
    old:  (old  is defined ? old  : {}),
    cats: (cats is defined ? cats : [])
  } %}
  <div class="mt-3">
    <button class="btn btn-primary">تحديث</button>
    <a class="btn btn-light" href="{{ base }}/{{ item.id }}">إلغاء</a>
  </div>
</form>
{% endblock %}
