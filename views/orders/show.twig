{% extends "layout.twig" %}
{% block title %}طلب #{{ o.id }}{% endblock %}

{% block content %}
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">تفاصيل الطلب #{{ o.id }}</h2>
    <a class="btn btn-outline-secondary btn-sm" href="{{ url('/orders') }}">عودة</a>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <tbody>
        <tr><th style="width:180px">المعرف</th><td>{{ o.id }}</td></tr>
        <tr><th>المستخدم</th><td>{{ o.user_id }}</td></tr>
        <tr><th>السوق</th><td>{{ o.market_name }} ({{ o.market_id }})</td></tr>
        <tr><th>الإجمالي</th><td>{{ o.total }}</td></tr>
        <tr><th>الحالة</th><td>{{ o.status }}</td></tr>
        <tr><th>نوع الدفع</th><td>{{ o.pay_type }}</td></tr>
        <tr><th>حالة الدفع</th><td>{{ o.pay_status }}</td></tr>
        <tr><th>سبب الرفض</th><td>{{ o.reject_reason ?? '-' }}</td></tr>
        <tr><th>تاريخ الإنشاء</th><td>{{ o.created_at }}</td></tr>
      </tbody>
    </table>
  </div>
{% endblock %}
